pipeline {
    agent any
    environment {
        PATH = "/home/Admin123/cmake-3.24.2/:$PATH"
        tag = sh(returnStdout: true, script: "git rev-parse -short=10 HEAD | tail -n +2")
    }
    parameters {
        booleanParam name: 'RUN_TESTS', defaultValue: true, description: 'Run Tests?'
        booleanParam name: 'RUN_ANALYSIS', defaultValue: true, description: 'Run Static Code Analysis?'
        booleanParam name: 'DEPLOY', defaultValue: true, description: 'Deploy Artifacts?'
    }
    stages {
        stage("clone code") {
            steps {
                git branch: 'master', credentialsId: 'GiHub', url: 'https://github.com/Ajayalla/jenkinsexampleCmake.git'
            }
        }
        stage("build code") {
            steps {
                cmake arguments: '-DCMAKE_TOOLCHAIN_FILE=/home/Admin123/.vcpkg/scripts/buildsystems/vcpkg.cmake', installation: 'InSearchPath'
                cmakeBuild buildType: 'Release', cleanBuild: true, installation: 'InSearchPath', steps: [[withCmake: true]]
                //installation: '/var/lib/jenkins/workspace/Cmake1/01-basic/A-hello-cmake/CMakeLists.txt/'
            }
        }
        stage('Test') {
            when {
                environment name: 'RUN_TESTS', value: 'true'
            }
            steps {
                ctest 'InSearchPath'
            }
            
        }
    }
}
